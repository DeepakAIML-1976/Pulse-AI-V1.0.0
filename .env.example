# ========== Pulse Global .env.example (Render MinIO by default; switch to AWS S3 by changing S3_ENDPOINT) ==========

# Auth (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-public-anon-key

# OpenAI
OPENAI_API_KEY=

# Storage (Render MinIO default; change to AWS S3 endpoint for production)
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=pulse-prod

# Redis
REDIS_URL=redis://redis:6379/0

# Database
DATABASE_URL=postgresql+psycopg2://pulse:pulsepass@postgres:5432/pulsedb

# Backend
BACKEND_SERVICE_KEY=change-this-strong-secret
BACKEND_CORS_ORIGINS=http://localhost:3000,https://pulseapp.vercel.app

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-public-anon-key

# Worker
BACKEND_URL=http://backend:8000
